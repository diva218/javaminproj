<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NgoController" spacing="10" stylesheets="/styles.css">
  <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
  <children>
    <HBox spacing="10" styleClass="header-bar">
      <children>
        <Label text="NGO Dashboard" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Logout" onAction="#handleLogout" />
      </children>
    </HBox>

    <TitledPane text="Place Order" expanded="true">
      <content>
        <HBox spacing="10" alignment="CENTER_LEFT">
          <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
          <children>
            <Label text="Select Item:" />
            <ComboBox fx:id="itemChoice" prefWidth="220" />
            <Label text="Quantity:" />
            <TextField fx:id="qtyField" prefWidth="80" promptText="0" />
            <Button text="Order" onAction="#handlePlaceOrder" />
            <Label fx:id="statusLabel" />
          </children>
        </HBox>
      </content>
    </TitledPane>

    <SplitPane dividerPositions="0.5">
      <items>
        <VBox spacing="6">
          <children>
            <Label text="Inventory" />
            <TableView fx:id="inventoryTable">
              <columns>
                <TableColumn fx:id="invColName" text="Name" prefWidth="160" />
                <TableColumn fx:id="invColCategory" text="Category" prefWidth="120" />
                <TableColumn fx:id="invColQty" text="Qty" prefWidth="70" />
                <TableColumn fx:id="invColExpiry" text="Expiry" prefWidth="120" />
              </columns>
            </TableView>
          </children>
        </VBox>
        <VBox spacing="6">
          <children>
            <Label text="My Orders" />
            <TableView fx:id="ordersTable">
              <columns>
                <TableColumn fx:id="ordColId" text="Order #" prefWidth="80" />
                <TableColumn fx:id="ordColItem" text="Item" prefWidth="160" />
                <TableColumn fx:id="ordColQty" text="Qty" prefWidth="70" />
                <TableColumn fx:id="ordColDate" text="Date" prefWidth="140" />
              </columns>
            </TableView>
          </children>
        </VBox>
      </items>
    </SplitPane>
  </children>
</VBox>
